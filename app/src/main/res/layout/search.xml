<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/search_layout_input"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/search_input_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="년도 입력"
            android:inputType="number"
            android:fontFamily="@font/jalnan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="년"
            android:fontFamily="@font/jalnan"/>

        <EditText
            android:id="@+id/search_input_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="월을 입력"
            android:inputType="number"
            android:fontFamily="@font/jalnan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="월"
            android:fontFamily="@font/jalnan"/>

        <EditText
            android:id="@+id/search_input_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="일을 입력"
            android:inputType="number"
            android:fontFamily="@font/jalnan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="일"
            android:fontFamily="@font/jalnan"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_layout_input">

        <Button
            android:id="@+id/search_button_go"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="이동"
            android:layout_centerHorizontal="true"
            android:onClick="onClickGo"
            android:fontFamily="@font/jalnan"/>

    </RelativeLayout>

</RelativeLayout>